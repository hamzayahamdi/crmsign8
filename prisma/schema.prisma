generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Lead {
  id                  String       @id @default(cuid())
  nom                 String
  telephone           String
  ville               String
  typeBien            String
  statut              LeadStatus
  statutDetaille      String
  message             String?
  assignePar          String
  derniereMaj         DateTime     @default(now())
  source              LeadSource
  priorite            LeadPriority
  magasin             String?
  commercialMagasin   String?
  month               String?
  campaignName        String?      @map("campaign_name")
  uploadedAt          DateTime?    @map("uploaded_at")
  convertedAt         DateTime?    @map("converted_at")
  notes               LeadNote[]
  createdBy           String?
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt

  @@index([createdAt(sort: Desc)])
  @@index([statut])
  @@index([ville])
  @@index([priorite])
  @@index([assignePar])
  @@index([source])
  @@index([month])
  @@map("leads")
}

model LeadNote {
  id        String   @id @default(cuid())
  leadId    String
  lead      Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  content   String
  author    String
  createdAt DateTime @default(now())

  @@index([leadId])
  @@index([createdAt(sort: Desc)])
  @@map("lead_notes")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("user")
  magasin   String?
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamptz(6)

  @@index([email])
  @@index([createdAt(sort: Desc)], map: "users_createdat_idx")
  @@map("users")
}

enum LeadStatus {
  nouveau
  a_recontacter
  sans_reponse
  non_interesse
  qualifie
  refuse
}

enum LeadSource {
  magasin
  site_web
  facebook
  instagram
  tiktok
  reference_client
  autre
}

enum LeadPriority {
  haute
  moyenne
  basse
}

model Task {
  id              String       @id @default(cuid())
  title           String
  description     String
  dueDate         DateTime
  assignedTo      String
  linkedType      LinkedType
  linkedId        String
  linkedName      String?
  status          TaskStatus
  reminderEnabled Boolean      @default(false)
  reminderDays    Int?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  createdBy       String

  @@index([assignedTo])
  @@index([status])
  @@index([dueDate])
  @@index([linkedType, linkedId])
  @@map("tasks")
}

enum TaskStatus {
  a_faire
  en_cours
  termine
}

enum LinkedType {
  lead
  client
}

model CalendarEvent {
  id               String       @id @default(cuid())
  title            String
  description      String?
  startDate        DateTime
  endDate          DateTime
  eventType        EventType
  assignedTo       String
  location         String?
  reminderType     ReminderType @default(none)
  reminderSent     Boolean      @default(false)
  linkedClientId   String?
  linkedLeadId     String?
  linkedArchitectId String?
  createdBy        String
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  @@index([startDate(sort: Desc)])
  @@index([assignedTo])
  @@index([eventType])
  @@index([createdBy])
  @@map("calendar_events")
}

enum EventType {
  rendez_vous
  suivi_projet
  appel_reunion
  urgent
}

enum ReminderType {
  min_5
  min_30
  hour_1
  day_1
  none
}

model Document {
  id          String   @id @default(cuid())
  clientId    String   @map("client_id")
  client      Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  name        String
  path        String
  bucket      String
  type        String
  size        Int
  category    String
  uploadedBy  String   @map("uploaded_by")
  uploadedAt  DateTime @default(now()) @map("uploaded_at")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([clientId])
  @@index([uploadedAt(sort: Desc)])
  @@map("documents")
}

model EventReminder {
  id                String   @id @default(cuid())
  eventId           String   @map("event_id")
  userId            String   @map("user_id")
  reminderTime      DateTime @map("reminder_time")
  reminderType      String   @map("reminder_type")
  notificationSent  Boolean  @default(false) @map("notification_sent")
  notificationMethod String? @map("notification_method")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  @@unique([eventId, userId])
  @@index([eventId])
  @@index([userId])
  @@index([reminderTime])
  @@index([notificationSent])
  @@map("event_reminders")
}

model NotificationPreference {
  id              String   @id @default(cuid())
  userId          String   @unique @map("user_id")
  pushEnabled     Boolean  @default(false) @map("push_enabled")
  emailEnabled    Boolean  @default(true) @map("email_enabled")
  pushSubscription Json?   @map("push_subscription")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@map("notification_preferences")
}

model Devis {
  id             String    @id @default(cuid())
  clientId       String    @map("client_id")
  client         Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)
  title          String
  montant        Float
  date           DateTime  @default(now())
  statut         String    @default("en_attente")
  factureReglee  Boolean   @default(false) @map("facture_reglee")
  description    String?
  fichier        String?
  createdBy      String    @map("created_by")
  createdAt      DateTime  @default(now()) @map("created_at")
  validatedAt    DateTime? @map("validated_at")
  notes          String?
  updatedAt      DateTime  @updatedAt @map("updated_at")

  @@index([clientId])
  @@index([statut])
  @@index([date(sort: Desc)])
  @@map("devis")
}

model Historique {
  id              String    @id @default(cuid())
  clientId        String    @map("client_id")
  client          Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)
  date            DateTime  @default(now())
  type            String    // note, statut, rdv, document, etc.
  description     String
  auteur          String
  previousStatus  String?   @map("previous_status")
  newStatus       String?   @map("new_status")
  durationInHours Int?      @map("duration_in_hours")
  timestampStart  DateTime? @map("timestamp_start")
  timestampEnd    DateTime? @map("timestamp_end")
  metadata        Json?
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  @@index([clientId])
  @@index([type])
  @@index([date(sort: Desc)])
  @@map("historique")
}

model Appointment {
  id            String    @id @default(cuid())
  title         String
  dateStart     DateTime  @map("date_start")
  dateEnd       DateTime  @map("date_end")
  description   String?
  location      String?
  locationUrl   String?   @map("location_url")
  status        String    @default("upcoming") // upcoming, completed, cancelled
  clientId      String?   @map("client_id")
  client        Client?   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  clientName    String?   @map("client_name")
  architecteId  String?   @map("architecte_id")
  notes         String?
  createdBy     String    @map("created_by")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  @@index([clientId])
  @@index([status])
  @@index([dateStart(sort: Desc)])
  @@index([createdBy])
  @@map("appointments")
}

model Client {
  id                  String               @id @default(cuid())
  nom                 String
  telephone           String
  ville               String
  typeProjet          ProjectType          @map("type_projet")
  architecteAssigne   String               @map("architecte_assigne")
  statutProjet        ProjectStatus        @map("statut_projet")
  derniereMaj         DateTime             @default(now()) @map("derniere_maj")
  leadId              String?              @map("lead_id")
  leadData            Json?                @map("lead_data") // Store complete lead data for restoration
  email               String?
  adresse             String?
  budget              Float?
  notes               String?
  magasin             String?
  commercialAttribue  String?              @map("commercial_attribue")
  createdAt           DateTime             @default(now()) @map("created_at")
  updatedAt           DateTime             @updatedAt @map("updated_at")
  
  // Relations
  devis               Devis[]
  historique          Historique[]
  appointments        Appointment[]
  documents           Document[]
  payments            Payment[]
  stageHistory        ClientStageHistory[]

  @@index([statutProjet])
  @@index([ville])
  @@index([architecteAssigne])
  @@index([magasin])
  @@index([createdAt(sort: Desc)])
  @@map("clients")
}

enum ProjectType {
  appartement
  villa
  magasin
  bureau
  riad
  studio
  autre
}

enum ProjectStatus {
  qualifie
  acompte_recu
  conception
  devis_negociation
  accepte
  refuse
  premier_depot
  projet_en_cours
  chantier
  facture_reglee
  livraison_termine
  nouveau
  acompte_verse
  en_conception
  en_validation
  en_chantier
  livraison
  termine
  annule
  suspendu
}

model ClientStageHistory {
  id              String    @id @default(cuid())
  clientId        String    @map("client_id")
  client          Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)
  stageName       String    @map("stage_name")
  startedAt       DateTime  @map("started_at")
  endedAt         DateTime? @map("ended_at")
  durationSeconds Int?      @map("duration_seconds")
  changedBy       String    @map("changed_by")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  @@index([clientId])
  @@index([stageName])
  @@index([startedAt(sort: Desc)])
  @@map("client_stage_history")
}

model Payment {
  id          String   @id @default(cuid())
  clientId    String   @map("client_id")
  client      Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  montant     Float
  date        DateTime @default(now())
  methode     String   // espece, virement, cheque
  reference   String?
  description String?
  createdBy   String   @map("created_by")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([clientId])
  @@index([date(sort: Desc)])
  @@map("payments")
}

model Notification {
  id          String             @id @default(cuid())
  userId      String             @map("user_id")
  type        NotificationType
  priority    NotificationPriority
  title       String
  message     String
  isRead      Boolean            @default(false) @map("is_read")
  linkedType  String?            @map("linked_type") // client, lead, appointment, devis, etc.
  linkedId    String?            @map("linked_id")
  linkedName  String?            @map("linked_name")
  metadata    Json?              // Additional contextual data
  createdBy   String?            @map("created_by")
  createdAt   DateTime           @default(now()) @map("created_at")
  readAt      DateTime?          @map("read_at")

  @@index([userId])
  @@index([isRead])
  @@index([createdAt(sort: Desc)])
  @@index([type])
  @@index([priority])
  @@map("notifications")
}

enum NotificationType {
  rdv_created
  rdv_updated
  rdv_reminder
  devis_created
  devis_updated
  stage_changed
  payment_received
  note_added
  task_assigned
  task_due_soon
  document_uploaded
  client_assigned
}

enum NotificationPriority {
  high
  medium
  low
}
