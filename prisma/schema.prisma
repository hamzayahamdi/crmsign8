enum EventType {
  rendez_vous
  suivi_projet
  appel_reunion
  urgent
}

enum ReminderType {
  min_5
  min_30
  hour_1
  day_1
  none
}

enum ProjectType {
  appartement
  villa
  magasin
  bureau
  riad
  studio
  autre
}

