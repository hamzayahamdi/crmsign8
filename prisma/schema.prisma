  nouveau
  a_recontacter
  sans_reponse
  non_interesse
  qualifie
  refuse
}

enum LeadSource {
  magasin
  site_web
  facebook
  instagram
  tiktok
  reference_client
  autre
}

enum LeadPriority {
  haute
  moyenne
  basse
}

enum TaskStatus {
  a_faire
  en_cours
  termine
}

enum LinkedType {
  lead
  client
  contact
  opportunity
}

enum ContactTag {
  prospect
  vip
  converted
  archived
  client
}

enum ContactStatus {
  qualifie
  prise_de_besoin
  acompte_recu
  perdu
}

enum OpportunityType {
  villa
  appartement
  magasin
  bureau
  riad
  studio
  renovation
  autre
}

enum OpportunityStatus {
  open
  won
  lost
  on_hold
