generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Lead {
  id                  String       @id @default(cuid())
  nom                 String
  telephone           String
  ville               String
  typeBien            String
  statut              LeadStatus
  statutDetaille      String
  message             String?
  assignePar          String
  derniereMaj         DateTime     @default(now())
  source              LeadSource
  priorite            LeadPriority
  magasin             String?
  commercialMagasin   String?
  notes               LeadNote[]
  createdBy           String?
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt

  @@index([createdAt(sort: Desc)])
  @@index([statut])
  @@index([ville])
  @@index([priorite])
  @@index([assignePar])
  @@map("leads")
}

model LeadNote {
  id        String   @id @default(cuid())
  leadId    String
  lead      Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  content   String
  author    String
  createdAt DateTime @default(now())

  @@index([leadId])
  @@index([createdAt(sort: Desc)])
  @@map("lead_notes")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("user")
  magasin   String?
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamptz(6)

  @@index([email])
  @@index([createdAt(sort: Desc)], map: "users_createdat_idx")
  @@map("users")
}

enum LeadStatus {
  nouveau
  a_recontacter
  sans_reponse
  non_interesse
  converti
}

enum LeadSource {
  magasin
  site_web
  facebook
  instagram
  tiktok
  reference_client
  autre
}

enum LeadPriority {
  haute
  moyenne
  basse
}

model Task {
  id              String       @id @default(cuid())
  title           String
  description     String
  dueDate         DateTime
  assignedTo      String
  linkedType      LinkedType
  linkedId        String
  linkedName      String?
  status          TaskStatus
  reminderEnabled Boolean      @default(false)
  reminderDays    Int?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  createdBy       String

  @@index([assignedTo])
  @@index([status])
  @@index([dueDate])
  @@index([linkedType, linkedId])
  @@map("tasks")
}

enum TaskStatus {
  a_faire
  en_cours
  termine
}

enum LinkedType {
  lead
  client
}

model CalendarEvent {
  id               String       @id @default(cuid())
  title            String
  description      String?
  startDate        DateTime
  endDate          DateTime
  eventType        EventType
  assignedTo       String
  location         String?
  reminderType     ReminderType @default(none)
  reminderSent     Boolean      @default(false)
  linkedClientId   String?
  linkedLeadId     String?
  linkedArchitectId String?
  createdBy        String
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  @@index([startDate(sort: Desc)])
  @@index([assignedTo])
  @@index([eventType])
  @@index([createdBy])
  @@map("calendar_events")
}

enum EventType {
  rendez_vous
  suivi_projet
  appel_reunion
  urgent
}

enum ReminderType {
  min_15
  hour_1
  day_1
  none
}

model Document {
  id          String   @id @default(cuid())
  clientId    String   @map("client_id")
  name        String
  path        String
  bucket      String
  type        String
  size        Int
  category    String
  uploadedBy  String   @map("uploaded_by")
  uploadedAt  DateTime @default(now()) @map("uploaded_at")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([clientId])
  @@index([uploadedAt(sort: Desc)])
  @@map("documents")
}
